<header style="z-index:100;position: sticky; top: 0; background-color: white">
    <div class="container-fluid">
        <div class="row d-flex justify-content-between p-3">
            <!-- LOGO -->
            <div class="col-4 col-md-6 col-lg-2 inline-flex align-self-center">
                <a href="/"><img class="logo-circle" src="/images/logo.png" alt=""></a>
                <a class="d-flex align-items-center justify-content-center" href="/">Neo
                        Pos</a>
            </div>
            <!-- SEARCH -->
            <div class="col-8 col-md-6 col-lg-5 d-flex align-items-center justify-content-center">
                <form class="form-inline">
                    <input class="form-control fluid" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success p-2 ml-0 " type="submit"><i class="fas fa-search"></i></button>
                  </form>
            </div>
            <!-- CART -->
            <div class="col-4 col-lg-2 d-flex align-items-center justify-content-center">
                <a class="navbar-brand" href="/cart"><i class="fa fa-shopping-cart"></i><span class="red">3</span></a>
            </div>
            <!-- NAV -->
            <nav class=" col-4 col-lg-2 justify-content-center  navbar navbar-expand-lg ">
                <button class="navbar-toggler bg-dark" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
                    aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-grip-lines" style="color:white"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <% if(typeof user == 'undefined' ){ %>
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                Registrate
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                Inicia Sesión
                            </a>
                        </li>
                        <% } %>
                        <% if(typeof user != 'undefined' ){ %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hola <%= user.name%>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">Perfil</a>
                                <a class="dropdown-item" href="#">Cambiar contraseña</a>
                                <form action="/user/logout" method="POST">
                                    <button type="submit">Logout</button>
                                </form>
                            </div>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </nav>
            <!-- USER -->
            <div class="col-4 col-lg-1 d-flex align-items-center justify-content-center">
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor"
                    xmlns="http://www.w3.org/2000/svg">
                    <path
                        d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z" />
                    <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    <path fill-rule="evenodd"
                        d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z" />
                </svg>
            </div>
        </div>
    </div>
</header>





