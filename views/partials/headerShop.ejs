<header style="z-index:100;position: sticky; top: 0; background-color: white">
    <div class="container-fluid">
        <div class="row d-flex justify-content-between p-3">
            <!-- LOGO -->
            <div class="col-4 col-md-6 col-lg-2 inline-flex align-self-center">
                <a href="/"><img class="logo-circle" src="/images/logoAuxiliarNeopos.svg" alt=""></a>
            </div>
            <!-- SEARCH -->
            <div class="col-8 col-md-6 col-lg-5 d-flex align-items-center justify-content-center">
                <form class="form-inline">
                    <input class="form-control fluid" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success p-2 ml-0 " type="submit"><i
                            class="fas fa-search"></i></button>
                </form>
            </div>
            <!-- CART -->
            <div class="col-4 col-lg-2 d-flex align-items-center justify-content-center">
                <a class="navbar-brand" href="/cart"><i class="fa fa-shopping-cart"></i><span class="red">3</span></a>
            </div>



            <!-- NAV -->
            <nav class=" col-4 col-lg-2 justify-content-center  navbar navbar-expand-lg ">
                <button class="navbar-toggler bg-dark" type="button" data-toggle="collapse"
                    data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <i class="fas fa-grip-lines" style="color:white"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <% if( typeof user == 'undefined' ){ %>
                        <li class="nav-item">
                            <button
                                class="inline-flex items-center bg-gray-200 border-0 mr-2 py-1 px-3 focus:outline-none hover:bg-gray-300 rounded text-base md:mt-0"
                                data-toggle="modal" data-target="#modalLogin">Ingresa
                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                                </svg>
                            </button>
                        </li>
                        <li class="nav-item">
                            <button
                                class="inline-flex items-center bg-gray-200 border-0 py-1 px-3 focus:outline-none hover:bg-gray-300 rounded text-base md:mt-0"
                                data-toggle="modal" data-target="#modalSignUp">Registrate
                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                                </svg>
                            </button>
                        </li>

                        <% }else{%>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                Hola! <%= user.name%>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">Perfil</a>
                                <a class="dropdown-item" href="#">Cambiar contrase√±a</a>
                                <a class="dropdown-item">
                                    <form action="/user/logout" method="POST">
                                        <button type="submit">Logout</button>
                                    </form>
                                </a>
                            </div>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
</header>





