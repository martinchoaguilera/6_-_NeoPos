<header class="" style="z-index:100; position:sticky; top:0; background-color: var(--gainsboro);width: 100%;" >
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a href="/"><img class="" src="/images/logoAuxiliarNeopos.svg" alt="" style="width: 25vh;"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <% if( typeof user == 'undefined' ){ %>
            <li class="nav-item">
                <button
                    class="inline-flex items-center  border-0 mr-2 py-1 px-3  md:mt-0"
                    data-toggle="modal" data-target="#modalLogin">Ingresa

                </button>
            </li>
            <li class="nav-item">
                <button
                    class="inline-flex items-center  border-0 py-1 px-3 md:mt-0"
                    data-toggle="modal" data-target="#modalSignUp">Registrate
                </button>
            </li>

            <% }else{%>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img class="logo-circle" src="<%= user.avatar %>" alt="">
                    Hola! <%= user.name%>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="#">Perfil</a>
                    <a class="dropdown-item" href="#">Cambiar contraseña</a>
                    <a class="dropdown-item">
                        <form action="/user/logout" method="POST">
                            <button type="submit">Cerrar Sesión</button>
                        </form>
                    </a>
                </div>
            </li>
            <% } %>
        </ul>
      <span class="navbar-text">
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
      </span>
    </div>
  </nav>
</header>